@using Giantnodes.Service.Tenants.Domain.Entities
@using Giantnodes.Service.Tenants.Mail.Templates

@model TenentInvitationTemplate

@{
    Layout = "_Layout";
}

<mj-section background-color="#ffffff">
  <mj-column>
    <mj-text padding="10px 25px" font-size="20px">
      <strong>Hi @Model.GivenName!</strong>
    </mj-text>

    <mj-text font-size="14px" line-height="20px">
      You have been invited to join <strong>@Model.Tenant.Name</strong> by <strong>TODO</strong>, to accept the
      invitation use the button below.
    </mj-text>

    <mj-button href="www.giantnodes.com?t=@Model.Code" width="100%" background-color="#2cc76a">
      <strong>Accept Invitation</strong>
    </mj-button>

    <mj-text font-size="14px" line-height="20px">
      If you wish to decline this invitation, you can ignore this and the link will expire in @TenantInvite.LifetimeHours hours.
    </mj-text>

    <mj-text font-size="14px" line-height="20px">
      <strong>Note:</strong> This invitation was intended for
      <a href="mailto:@Model.Email" target="_blank">@Model.Email</a>. If you were not expecting this invitation,
      you can ignore this email. If TODO is sending you too many emails, you can <a href="www.giantnodes.com">report abuse</a>.
    </mj-text>
  </mj-column>
</mj-section>
